<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">BlazorDash</a>
    <button class="navbar-toggler" onclick=@Dropdown>
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class=@(collapseNavMenu ? "collapse" : null) onclick=@ToggleNavMenu>
    <ul class="nav flex-column @(dropDownActive ? "dropped" : null)">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match=NavLinkMatch.All>
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="competitions">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Competitions
            </NavLink>
        </li>
    </ul>
</div>

@functions {
    bool collapseNavMenu = true;
    bool dropDownActive = false;

    void ToggleNavMenu()
    {
        if (dropDownActive)
        {
            collapseNavMenu = true;
            dropDownActive = false;
        }
    }

    void Dropdown()
    {
        collapseNavMenu = !collapseNavMenu;
        dropDownActive = !collapseNavMenu;
    }
}
